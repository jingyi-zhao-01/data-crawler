# CoreWeave Profitability Monitor Configuration

# OpenAI API for web content extraction
OPENAI_API_KEY=your_openai_api_key_here

# Financial Data APIs
FRED_API_KEY=your_fred_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
QUANDL_API_KEY=your_quandl_api_key_here

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Twilio SMS Notifications (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_RECIPIENTS=+1234567890,+0987654321

# Monitoring Configuration
MONITOR_MODE=single  # Options: single, continuous, scheduled, summary
MONITOR_INTERVAL=60  # Minutes between collection cycles (for continuous mode)

# Database Configuration
DATABASE_PATH=coreweave_profitability.db

# Alert Thresholds
GPU_PRICE_SPIKE_THRESHOLD=15  # Percentage increase to trigger alert
TREASURY_YIELD_SPIKE_THRESHOLD=20  # Basis points change to trigger alert
NATURAL_GAS_SPIKE_THRESHOLD=10  # Percentage change to trigger alert

# Data Collection Frequencies (in minutes)
GPU_PRICING_FREQUENCY=15
FINANCIAL_DATA_FREQUENCY=15
NEWS_DATA_FREQUENCY=60
SEC_FILINGS_FREQUENCY=240  # 4 hours
ALERT_MONITORING_FREQUENCY=30

# Web Scraping Configuration
USER_AGENT=Mozilla/5.0 (compatible; CoreWeaveMonitor/1.0; +http://example.com/contact)
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=coreweave_monitor.log